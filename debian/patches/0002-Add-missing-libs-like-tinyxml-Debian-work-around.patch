--- a/cmake/in-files/config.h.in
+++ b/cmake/in-files/config.h.in
@@ -47,6 +47,7 @@
 #cmakedefine HAVE_SYS_TYPES_H
 #cmakedefine HAVE_SYS_FCNTL_H
 #cmakedefine HAVE_SYS_IOCTL_H
+#cmakedefine HAVE_STDINT_H
