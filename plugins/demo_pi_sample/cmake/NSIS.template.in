!insertmacro Delete_Empty_Parents_Macro "un."


!macro Delete_Empty_Dir_Macro un
	Function ${un}Delete_Empty_Dir
		Push $R3
		Exch
		Pop $R3
		Push $R4
		${DirState} $R3 $R4
		StrCmp $R4 0 0 end
		RMDir "$R3"
		Sleep 100
		StrCpy $error_tmp 1

		end:
		Pop $R4
		Pop $R3
	FunctionEnd
!macroend
