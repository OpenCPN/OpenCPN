	${If} ${FileExists} "$Uninstall_Path_Tmp\*.*"
		Sleep 250
		RMDir "$Uninstall_Path_Tmp"
	${EndIf}

	Pop $R6
	Pop $R7
	Pop $R8
	Pop $R9
	Pop $2
	Pop $1
	Pop $0
	end:
FunctionEnd
