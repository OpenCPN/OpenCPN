/*	Var Label_TypeInst_Reinstall
	Var RB_Reinstall
	Var Label_TypeInst_Upgrade
	Var RB_Upgrade
	Var Label_TypeInst_Downgrade
	Var RB_Downgrade
	Var Label_TypeInst_Parallel
	Var GroupBox_TypeInst
