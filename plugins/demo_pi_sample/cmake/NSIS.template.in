	${EndIf}

	;# Check files and delete them ...
	${If} ${FileExists} "$Uninstall_Path_Tmp\opencpn.exe"
		Delete "$Uninstall_Path_Tmp\opencpn.exe"
	${EndIf}

	${If} ${FileExists} "$Uninstall_Path_Tmp\license.txt"
